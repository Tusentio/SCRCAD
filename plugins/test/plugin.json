{
    "name": "Test Plugin",
    "handler": "testPlugin",
    "description": "An extensive testing plugin.",
    "requires": [
        {
            "name": "scrcad-color",
            "version": "1.0"
        }
    ],
    "tools": [
        {
            "name": "Click",
            "handler": "clickTool",
            "tooltip": "A tool for clicking"
        }
    ],
    "panels": [
        {
            "name": "Test Panel",
            "inputs": [
                {
                    "name": "String Param",
                    "type": "string"
                },
                {
                    "name": "Click Me!",
                    "handler": "clickMe",
                    "type": "action"
                },
                {
                    "name": "Number Param",
                    "type": "number"
                },
                {
                    "name": "Integer Param",
                    "type": "integer"
                },
                {
                    "name": "Boolean Param",
                    "type": "boolean"
                },
                {
                    "name": "Color Param",
                    "type": "color",
                    "value": "#FFF"
                }
            ]
        }
    ],
    "menu": [
        {
            "name": "Test Button",
            "handler": "clickMe",
            "type": "action"
        },
        {
            "name": "Test Boolean",
            "type": "boolean"
        }
    ]
}
